<Window x:Class="EzGiT.app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EzGiT.app"
        mc:Ignorable="d"
        Title="MainWindow" Height="601.027" Width="1087.671" Background="#FFC1C1C1">
    <Grid>
        <Button x:Name="btnStatus" Content="Git Status" HorizontalAlignment="Left" Margin="676,77,0,0" VerticalAlignment="Top" Width="168" Click="btnStatus_Click"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="489" Margin="10,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="631" Background="Black" Foreground="White"/>
        <Button x:Name="btnChooseDir" Content="Choose Git Repository" HorizontalAlignment="Left" Margin="676,48,0,0" VerticalAlignment="Top" Width="168" Click="btnChooseDir_Click"/>
        <Label Content="Git Repository :" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.337,0.041"/>
        <Label x:Name="lblWorkingDir" Content="" HorizontalAlignment="Left" Margin="131,17,0,0" VerticalAlignment="Top" Width="324"/>
        <Button x:Name="btnGitInit" Content="Git Init" HorizontalAlignment="Left" Margin="676,113,0,0" VerticalAlignment="Top" Width="168" Click="btnGitInit_Click"/>
        <Button x:Name="btnGitClone" Content="Clone " HorizontalAlignment="Left" Margin="676,186,0,0" VerticalAlignment="Top" Width="161" Click="btnGitClone_Click"/>
        <TextBox x:Name="tbRepoToClone" HorizontalAlignment="Left" Height="23" Margin="677,150,0,0" TextWrapping="Wrap" Text="Repo To Clone Url" VerticalAlignment="Top" Width="269" RenderTransformOrigin="0.508,0.302">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.061"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="tbCommitMessage" HorizontalAlignment="Left" Height="98" Margin="676,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221"/>
        <Label Content="Commit Message" HorizontalAlignment="Left" Margin="676,212,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.025,0.105"/>
        <Button x:Name="btnGitCommit" Content="Git Commit" HorizontalAlignment="Left" Margin="676,350,0,0" VerticalAlignment="Top" Width="161" Click="btnGitCommit_Click"/>

    </Grid>
</Window>
