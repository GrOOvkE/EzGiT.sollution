<Window x:Class="EzGiT.app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EzGiT.app"
        mc:Ignorable="d"
        Title="MainWindow" Height="573.732" Width="969.661" WindowStyle="None" ResizeMode="NoResize"  MouseDown="Window_MouseDown">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF1543A6"/>
            <GradientStop Color="#FF8DA3D3" Offset="1"/>
            <GradientStop Color="#FE4D70BB" Offset="0.493"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid HorizontalAlignment="Left" Width="964">
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="289" Margin="10,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="465" Background="#99646363" Foreground="White" BorderThickness="4" FontSize="16"/>
        <Button x:Name="btnChooseDir" Content="Choose Git Repository" HorizontalAlignment="Left" Margin="544,92,0,0" VerticalAlignment="Top" Width="168" Click="btnChooseDir_Click" Background="#00000000" BorderBrush="White" Foreground="White" Height="33"/>
        <Label Content="Active Project :" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.337,0.041" Foreground="White" FontWeight="Bold" Width="102" BorderBrush="#FFD42020" Background="#FFC55454" Height="31"/>
        <Label x:Name="lblWorkingDir" Content="" HorizontalAlignment="Left" Margin="117,92,0,0" VerticalAlignment="Top" Width="358" FontWeight="Bold" Foreground="White" Background="#FFC55454" Height="31"/>
        <Grid x:Name="grdStatusInitPull" Margin="544,92,54,397">
            <Button x:Name="btnStatus" Content="Git Status" HorizontalAlignment="Left" Margin="198,0,0,0" VerticalAlignment="Top" Width="168" Click="btnStatus_Click" Background="#00000000" Foreground="White" BorderBrush="White" Height="33"/>
            <Button x:Name="btnGitInit" Content="Git Init" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top" Width="168" Click="btnGitInit_Click" BorderBrush="White" Background="#00000000" Foreground="White" Height="33"/>
            <Button x:Name="btnGitPull" Content="Git Pull (update)" HorizontalAlignment="Left" Margin="198,52,0,0" VerticalAlignment="Top" Width="168" Click="btnGitPull_Click" Background="#00000000" BorderBrush="White" Foreground="White" Height="33"/>
        </Grid>
        <Grid x:Name="grdClone" Margin="544,226,85,237">
            <GroupBox Header="Clone" Margin="-14,-32,-32,0" Foreground="White"/>
            <Button x:Name="btnGitClone" Content="Git Clone " Margin="1,67,212,0" VerticalAlignment="Top" Click="btnGitClone_Click" Background="#00000000" BorderBrush="White" Foreground="White" Height="25"/>
            <TextBox x:Name="tbRepoToClone" HorizontalAlignment="Left" Height="54" Margin="1,0,0,0" TextWrapping="Wrap" Text="Enter A Valid Github Url" VerticalAlignment="Top" Width="317" RenderTransformOrigin="0.508,0.302" Background="#00000000" Foreground="White" BorderBrush="White">

            </TextBox>
        </Grid>
        <GroupBox Header="Commit&#xD;&#xA;" HorizontalAlignment="Left" Height="187" Margin="530,342,0,0" VerticalAlignment="Top" Width="380" Foreground="White"/>
        <Grid x:Name="grdCommit" Margin="565,357,73,20">
            <TextBox x:Name="tbCommitMessage" HorizontalAlignment="Left" Height="80" Margin="0,30,-170,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="303" Background="#00000000" BorderBrush="White" Foreground="White"/>
            <Label Content="Commit Message" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.025,0.105" Foreground="White" Margin="-6,2,0,0"/>
            <Button x:Name="btnGitCommit" Content="Git Commit" HorizontalAlignment="Left" Margin="104,125,-56,0" VerticalAlignment="Top" Width="85" Click="btnGitCommit_Click" Foreground="White" Background="#00000000" BorderBrush="White" Height="32"/>

            <Button x:Name="btnGitStageFiles" Content="Stage All" HorizontalAlignment="Left" Margin="0,125,0,0" VerticalAlignment="Top" Width="76" Click="btnGitStageFiles_Click" Background="#00000000" BorderBrush="White" Foreground="White" Height="32"/>
            <Button x:Name="btnGitPush" Content="Git Push" HorizontalAlignment="Left" Margin="208,125,0,0" VerticalAlignment="Top" Width="95" Click="btnGitPush_Click" Foreground="White" BorderBrush="White" Background="#00FF0000" Height="32"/>

        </Grid>
        <Label Content="Expert Command Mode: " HorizontalAlignment="Left" Margin="10,445,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbExpertCmd" HorizontalAlignment="Left" Height="35" Margin="10,481,0,0" TextWrapping="Wrap" Text="Example: git merge ...." VerticalAlignment="Top" Width="372" Foreground="White" Background="#7FFFFFFF" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <Button x:Name="btnExpertCmd" Content="Execute!" HorizontalAlignment="Left" Margin="400,484,0,0" VerticalAlignment="Top" Width="75" Background="#7FFF0000" BorderBrush="White" Foreground="White" Height="32"/>
        <Label Content="EzGit" HorizontalAlignment="Left" Height="82" Margin="37,10,0,0" VerticalAlignment="Top" Width="345" FontFamily="Tekton Pro Ext" FontSize="72" Foreground="White"/>
        <Label x:Name="btnExit" Content="EXIT" HorizontalAlignment="Left" Margin="918,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.435,-0.434" Foreground="White" BorderBrush="White" BorderThickness="2" Width="36" MouseDown="btnExit_MouseDown" Height="29" Background="#7FFF0000" FontFamily="Tekton Pro Cond" VerticalContentAlignment="Center"/>
        <Label x:Name="btnMinimize" Content="_______" HorizontalAlignment="Left" Margin="874,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.435,-0.434" Foreground="#FFFBFBFB" BorderBrush="White" BorderThickness="2" Width="36" Background="#7F0F0F0F" FontWeight="Bold" FontFamily="Showcard Gothic" MouseDown="btnMinimize_MouseDown"/>
        <Label Content="GrOOvKe's" HorizontalAlignment="Left" Margin="12,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.789,0.881" FontWeight="Bold" FontFamily="Tekton Pro" FontSize="16" Foreground="#FFFF0404">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-15.246"/>
                    <TranslateTransform X="2.078" Y="-6.546"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Active Repository Directory :" HorizontalAlignment="Left" Margin="0,554,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.337,0.041" Foreground="White" FontWeight="Bold" Width="129" BorderBrush="#FFD42020" Background="#FFC55454" Height="20" FontSize="10" FontFamily="Tekton Pro"/>
        <Label x:Name="lblWorkingPath" Content="" HorizontalAlignment="Left" Margin="129,554,-12,0" VerticalAlignment="Top" RenderTransformOrigin="0.337,0.041" Foreground="White" FontWeight="Bold" Width="847" BorderBrush="#FFD42020" Background="#FFC55454" Height="20" FontFamily="Tekton Pro" FontSize="10"/>
    </Grid>
</Window>
